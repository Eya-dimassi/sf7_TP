{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<h1>Liste des Articles</h1>

{% if articles %}
    <table class="table table-striped" id="articles">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.nom }}</td>
                    <td>{{ article.prix }}</td>
                    <td>{{ article.category.titre }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">Détails</a>
                        <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-dark">Modifier</a>
                        <a href="{{ path('delete_article', {'id': article.id}) }}" class="btn btn-danger"
                         onclick="return confirm('Êtes-vous sûr de supprimer cet article?');">Supprimer</a>
                    </td>
                    

                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucun article</p>
{% endif %}
{% endblock %}




